<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/dental_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/my_mission_is_to_provide_the_best__and_friendly__dental_care_available_for_all_ages_with_the_aim_of_string"
                android:layout_gravity="center_horizontal|center"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginEnd="25dp"
                android:text="@string/my_mission_is_to_provide_the_best__and_friendly__dental_care_available_for_all_ages_with_the_aim_of_string"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="620dp"
            android:orientation="vertical"
            android:background="@drawable/background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textSpecialization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:text="General Dentist / Orthodontics / Endodontics"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView_profile_dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/textSpecialization"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/profile_dentist" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:background="@color/white">
                <!--Profile Full name-->

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_image"
                    android:src="@drawable/ic_person"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_show_fullname"
                    android:layout_alignStart="@+id/ic_image"
                    android:hint="Loading..."
                    android:textColor="@color/darkgray"
                    android:layout_marginStart="50dp"
                    android:textSize="18sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/divider_name"
                    android:layout_below="@id/textView_show_fullname"
                    android:background="@color/darkgray"/>
                <!-- Email -->

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_email"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_email"
                    android:layout_below="@+id/divider_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_show_email"
                    android:layout_below="@id/divider_name"
                    android:layout_alignStart="@+id/ic_email"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/darkgray"
                    android:layout_marginTop="20dp"
                    android:hint="Loading..."
                    android:text="abeygordon@gmail.com"
                    android:textSize="18sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/divider_email"
                    android:layout_below="@id/textView_show_email"
                    android:background="@color/darkgray"/>

                <!-- Phone -->

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_phone"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_phone"
                    android:layout_below="@+id/divider_email"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_show_phone"
                    android:layout_below="@id/divider_email"
                    android:layout_alignStart="@+id/ic_email"
                    android:hint="Loading..."
                    android:textColor="@color/darkgray"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:textSize="18sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/divider_phone"
                    android:layout_below="@id/textView_show_phone"
                    android:background="@color/darkgray"/>

                <!-- Address -->

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/ic_address"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_address"
                    android:layout_below="@+id/divider_phone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView_show_address"
                    android:layout_below="@id/divider_phone"
                    android:layout_alignStart="@+id/ic_email"
                    android:textColor="@color/darkgray"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"
                    android:hint="Loading..."
                    android:textSize="18sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:id="@+id/divider_address"
                    android:layout_below="@id/textView_show_address"
                    android:background="@color/darkgray"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>