<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/rl"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name: "
            android:textColor="@color/black"
            android:id="@+id/text2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textColor="@color/black"
            android:id="@+id/firstNametext"
            android:layout_toRightOf="@id/text2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name: "
            android:textColor="@color/black"
            android:id="@+id/text3"
            android:layout_below="@id/firstNametext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textColor="@color/black"
            android:id="@+id/lastNametext"
            android:layout_below="@+id/firstNametext"
            android:layout_toRightOf="@id/text3"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="@color/black"
            android:id="@+id/text4"
            android:layout_below="@id/lastNametext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Date"
            android:id="@+id/datetext"
            android:layout_below="@+id/lastNametext"
            android:layout_toRightOf="@id/text4"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: "
            android:textColor="@color/black"
            android:id="@+id/text5"
            android:layout_below="@id/datetext"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/black"
            android:id="@+id/timetext"
            android:layout_below="@+id/datetext"
            android:layout_toRightOf="@id/text5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services: "
            android:textColor="@color/black"
            android:id="@+id/text6"
            android:layout_below="@id/text5"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Services"
            android:textColor="@color/black"
            android:id="@+id/servicestext"
            android:layout_below="@+id/timetext"
            android:layout_toRightOf="@id/text6"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Type: "
            android:textColor="@color/black"
            android:id="@+id/text8"
            android:layout_below="@id/text6"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:textColor="@color/black"
            android:id="@+id/bookingType"
            android:layout_below="@+id/text6"
            android:layout_toRightOf="@id/text8"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="24dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/approvedBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/maincolor"
            android:textColor="@color/white"
            android:text="Queue" />

        <Button
            android:id="@+id/declineBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/gray"
            android:text="Decline" />
    </LinearLayout>
</androidx.cardview.widget.CardView>