<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/blueQueue"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/historyrl"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name: "
                android:textColor="@color/black"
                android:id="@+id/text1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/black"
                android:id="@+id/historyfirstname"
                android:layout_toRightOf="@+id/text1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name: "
                android:textColor="@color/black"
                android:id="@+id/text2"
                android:layout_below="@+id/text1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/black"
                android:id="@+id/historylastname"
                android:layout_toRightOf="@+id/text2"
                android:layout_below="@+id/historyfirstname"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textColor="@color/black"
                android:id="@+id/text3"
                android:layout_below="@+id/text2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/black"
                android:id="@+id/historydate"
                android:layout_toRightOf="@id/text3"
                android:layout_below="@+id/historylastname"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time: "
                android:textColor="@color/black"
                android:id="@+id/text5"
                android:layout_below="@id/historydate"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/black"
                android:id="@+id/historyTime"
                android:layout_below="@+id/historydate"
                android:layout_toRightOf="@id/text5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services: "
                android:textColor="@color/black"
                android:id="@+id/text4"
                android:layout_below="@+id/text5"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textColor="@color/black"
                android:id="@+id/historyservices"
                android:layout_toRightOf="@id/text4"
                android:layout_below="@+id/text5"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|bottom"
            android:orientation="horizontal"
            android:layout_below="@+id/historyrl">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/historyProfileBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border_bg"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="Profile View"
                android:textSize="12sp"
                android:layout_marginRight="15dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/prescriptionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/medicalprescription"
                android:layout_marginRight="5dp"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>